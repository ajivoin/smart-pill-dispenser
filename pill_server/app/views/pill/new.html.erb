<h3>Add New Pill</h3>


<%= form_with(url: "/pill", method: "put") do |f|%>
  <div class="form-group">
    <label for="name">Name</label>
    <%= text_field_tag(:name,"", class: "form-control") %>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <%= text_area_tag(:desc,"", class: "form-control") %>
  </div>
  <div class="form-group">
    <label for="description">Pill Count</label>
    <%= number_field_tag('count', "0", min: 0, class: "form-control") %>
  </div>
  <%= submit_tag("Add", class: "btn btn-primary") %>
<% end %>